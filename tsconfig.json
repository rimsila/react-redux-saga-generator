{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es5", "es6", "dom"],
    "typeRoots": ["typings", "node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/enum": ["./src/enums/"],
      "@/enums/*": ["./src/enums/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/apis/*": ["./src/api/*"],
      "@/api": ["./src/api/"],
      "@/pages/*": ["./src/pages/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/hocs/*": ["./src/hocs/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/redux-store/*": ["src/redux-store/*"],
      "@/contexts/*": ["src/contexts/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "src/index.tsx"],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["./src/**/*"]
  }
}
